{% if not message.isDeleted %}
    <tr class="{% if message.isNew %}trNewMessage{% else %}trReadMessage{% endif %}">
        <td align="center" width="100">
        </td>
            {% include 'user/thumbnail.html.twig' with {'user' : message.user } %}
        <td>
            <a href="{{ path('message_show', {'id' : message.id}) }}">
                <img src="/images/icone/{% if message.isRead %}messagelu.png{% else %}message.png{% endif %}" />
            </a>
        </td>
        <td align="left" style="overflow:hidden;">
            <div style="width:450px;">
                <a class="blackLink" href="{{ path('message_show', {'id' : message.id}) }}">
                    {{ message.content }}
                </a>
            </div>
        </td>
        <td>
            <a href="{{ path('message_show', {'id' : message.id}) }}">
                il y a {{ message.days }} jours
            </a>
        </td>
    </tr>
{% endif %}